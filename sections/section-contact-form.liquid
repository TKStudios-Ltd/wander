{%- comment -%}
  /sections/contact-form.liquid
{%- endcomment -%}
{%- liquid
  assign section_width = section.settings.width
  assign animations_enabled = settings.animations_enabled
  assign button_style = section.settings.button_style
  assign button_color = section.settings.button_color
  assign button_size = section.settings.button_size

  assign id = 'ContactForm--' | append: section.id
  assign selector_id = '#' | append: id
  assign form_id = 'Form-' | append: section.id
  assign animation_anchor = selector_id
  assign animation_delay = 150
-%}
{%- liquid
  assign has_bg = false
  assign desktop_bg_url = ''
  assign mobile_bg_url  = ''
  if section.settings.desktop_bg_image != blank
    assign desktop_bg_url = section.settings.desktop_bg_image | image_url: width: 2880 | prepend: 'https:'
    assign has_bg = true
  endif
  if section.settings.mobile_bg_image != blank
    assign mobile_bg_url = section.settings.mobile_bg_image | image_url: width: 1440 | prepend: 'https:'
    assign has_bg = true
  endif
  assign desktop_pos = '50% 50%'
  if section.settings.desktop_bg_image != blank and section.settings.desktop_bg_image.presentation.focal_point
    assign desktop_pos = section.settings.desktop_bg_image.presentation.focal_point
  endif
  assign mobile_pos = '50% 50%'
  if section.settings.mobile_bg_image != blank and section.settings.mobile_bg_image.presentation.focal_point
    assign mobile_pos = section.settings.mobile_bg_image.presentation.focal_point
  endif
-%}

{%- capture form_fields -%}
  {%- for block in section.blocks -%}
    {%- liquid
      assign block_title = block.settings.title

      assign required = ''
      if block.settings.required
        assign required = 'required'
      endif

      capture input_id
        echo form_id | append: '-' | append: forloop.index0
      endcapture
    -%}

    {% capture animation_attributes %}
      {% if animations_enabled %}
        data-aos="fade-up"
        data-aos-anchor="{{ animation_anchor }}"
        data-aos-delay="{{ animation_delay }}"
        {%- assign animation_delay = animation_delay | plus: 150 -%}
      {% endif %}
    {% endcapture %}

    {%- case block.type -%}
      {%- when 'heading' -%}
        <div class="form__item form__item--heading" {{ animation_attributes }} {{ block.shopify_attributes }}>
          <h2 class="form__heading">{{ block_title }}</h2>
        </div>

      {%- when 'email' -%}
        <div class="form__item" {{ animation_attributes }} {{ block.shopify_attributes }}>
          <label for="{{ input_id }}" class="field-label">{{ block_title }}</label>
          <input type="email" id="{{ input_id }}" class="input--full" name="contact[email]" placeholder="" autocorrect="off" autocapitalize="off" {{ required }}/>
        </div>

      {%- when 'body' -%}
        <div class="form__item" {{ animation_attributes }} {{ block.shopify_attributes }}>
          <label for="{{ input_id }}" class="field-label">{{ block_title }}</label>
          <textarea rows="10" id="{{ input_id }}" class="input--full" name="contact[{{ block_title | handle | default: 'body' }}]" placeholder="" {{ required }}></textarea>
        </div>

      {%- when 'text' -%}
        <div class="form__item" {{ animation_attributes }} {{ block.shopify_attributes }}>
          <label for="{{ input_id }}" class="field-label">{{ block_title }}</label>
          <input type="text" id="{{ input_id }}" class="input--full" name="contact[{{ block_title | handle | default: 'text' }}-{{ forloop.index0 }}]" autocapitalize="words" value="" placeholder="" {{ required }}/>
        </div>

      {%- when 'textarea' -%}
        <div class="form__item" {{ animation_attributes }} {{ block.shopify_attributes }}>
          <label for="{{ input_id }}" class="field-label">{{ block_title }}</label>
          <textarea rows="10" id="{{ input_id }}" class="input--full" name="contact[{{ block_title | handle | default: 'textarea' }}-{{ forloop.index0 }}]" placeholder="" {{ required }}></textarea>
        </div>

      {%- when 'telephone' -%}
        <div class="form__item" {{ animation_attributes }} {{ block.shopify_attributes }}>
          <label for="{{ input_id }}" class="field-label">{{ block_title }}</label>
          <input type="tel" id="{{ input_id }}" class="input--full" name="contact[{{ block_title | handle | default: 'telephone' }}-{{ forloop.index0 }}]" value="" placeholder="" {{ required }}/>
        </div>

      {%- when 'divider' -%}
        {%- liquid
          assign hr_class = 'hr--clear'
          assign show_line = block.settings.show_line
          if show_line
            assign hr_class = 'hr--full'
          endif
        -%}

        <div class="form__item">
          <hr class="{{ hr_class }}"{% if show_line %} {{ animation_attributes }}{% endif %} {{ block.shopify_attributes }}>
        </div>

      {%- when 'checkbox' -%}
        {%- unless block_title == blank -%}
          <div class="form__item form__item--checkbox" {{ animation_attributes }} {{ block.shopify_attributes }}>
            <label for="{{ input_id }}">
              <input type="checkbox" id="{{ input_id }}" class="input--checkbox" name="contact[{{ block_title | handle | default: 'checkbox' }}-{{ forloop.index0 }}]" value="{{ block_title }}" {{ required }}>
              <span>{{ block_title }}</span>
            </label>
          </div>
        {%- endunless -%}

      {%- when 'radio' -%}
        <fieldset class="form__item form__item--radio" {{ animation_attributes }} {{ block.shopify_attributes }}>
          {%- if block_title != blank -%}
            <legend class="form__label label-typography">{{ block_title }}</legend>
          {%- endif -%}

          {%- for i in (1..6) -%}
            {%- capture index -%}label-{%- cycle 'one', 'two', 'three', 'four', 'five', 'six' -%}{%- endcapture -%}
            {%- capture radio_id -%}{{ form_id }}-{{ block.id }}-{{ i }}{%- endcapture -%}

            {%- if block.settings[index] != blank -%}
              <label for="{{ radio_id }}">
                <input type="radio" id="{{ radio_id }}" class="input--radio" name="contact[{{ block_title | handle | default: 'radio' }}-{{ block.id }}]" value="{{ block.settings[index] }}" {{ required }}>
                <span>{{ block.settings[index] }}</span>
              </label>
            {%- endif -%}
          {%- endfor -%}
        </fieldset>

      {%- when 'select' -%}
        <fieldset class="form__item" {{ animation_attributes }} {{ block.shopify_attributes }}>
          {%- if block_title != blank -%}
            <label for="{{ input_id }}" class="form__label label-typography">{{ block_title }}</label>
          {%- endif -%}
          <div class="selector-wrapper">
            <select id="{{ input_id }}" class="FormSelect" name="contact[{{ block_title | handle | default: 'select' }}-{{ forloop.index0 }}]">
              {%- for i in (1..6) -%}
                {%- capture index -%}label-{%- cycle 'one', 'two', 'three', 'four', 'five', 'six' -%}{%- endcapture -%}

                {%- if block.settings[index] != blank -%}
                  <option value="{{ block.settings[index] }}">{{ block.settings[index] }}</option>
                {%- endif -%}
              {%- endfor -%}
            </select>
            {%- render 'icon-select' -%}
          </div>
        </fieldset>
    {%- endcase -%}
  {%- endfor -%}
{%- endcapture -%}

{%- style -%}
  {{ selector_id }} {
    --PT: 12vw;
    --PB: 12vw;

    /* store as url("...") so we can use background-image: var(...) directly */
    --bg-mobile: url({{ mobile_bg_url | json }});
    --bg-desktop: url({{ desktop_bg_url | json }});
    --bg-pos-mobile: {{ mobile_pos }};
    --bg-pos-desktop: {{ desktop_pos }};
    --bg-size: {{ section.settings.bg_size }};
    --bg-repeat: {{ section.settings.bg_repeat }};
    --overlay-color: {{ section.settings.bg_overlay_color }};
    --overlay-opacity: {{ section.settings.bg_overlay_opacity | divided_by: 100.0 }};
  }

  {{ selector_id }}.has-bg {
    position: relative;
    background-image: var(--bg-mobile);
    background-size: var(--bg-size);
    background-repeat: var(--bg-repeat);
    background-position: var(--bg-pos-mobile);
  }

  @media screen and (min-width: 750px) {
    {{ selector_id }}.has-bg {
      background-image: var(--bg-desktop);
      background-position: var(--bg-pos-desktop);
    }
  }
  @media screen and (max-width: 749px) {
    {{ selector_id }} .contact-form {
      padding: 24px !important;
      margin: 2rem 0;
    }
    {{ selector_id }} .wrapper--narrow {
      padding: 0 30px;
    }
  }


  {{ selector_id }}.has-bg::before {
    content: "";
    position: absolute;
    inset: 0;
    background: var(--overlay-color);
    opacity: var(--overlay-opacity);
    pointer-events: none;
    z-index: 0;
  }

  {{ selector_id }} .{{ section_width }} {
    position: relative;
    z-index: 1;
  }
{%- endstyle -%}


<section
  id="{{ id }}"
  class="section-padding{%- render 'button-fallback-classes', primary_color: button_color -%}{% if has_bg %} has-bg{% endif %}"
  data-section-type="contact-form"
  data-section-id="{{ section.id }}"
>
  <div class="{{ section_width }}">
    {%- form 'contact', id: form_id -%}
      {%- comment -%}
        Success message
      {%- endcomment -%}
      {%- if form.posted_successfully? -%}
        <div class="contact-form__message" data-form-message>
          <div class="wrapper">
            <p class="note form-success">
              {{- 'contact.form.post_success' | t -}}
            </p>

            <button type="button" class="contact-form__message__close" data-form-message-close aria-label="{{ 'general.accessibility.close_form_message' | t }}">
              {%- render 'icon-close' -%}
            </button>
          </div>
        </div>
      {%- elsif form.errors -%}
        <div class="contact-form__message">
          <div class="wrapper">
            {{- form.errors | default_errors -}}
          </div>
        </div>
      {%- endif -%}

      {{- form_fields -}}

      {%- liquid
        assign types = ''
        for block in section.blocks
          assign types = types | append: block.type
        endfor
      -%}

      {%- unless types contains 'text' -%}
        {%- assign name_attr = 'contact.form.name' | t | handle -%}
        <div class="form__item"
          {% if animations_enabled %}
            data-aos="fade-up"
            data-aos-anchor="{{ animation_anchor }}"
            data-aos-delay="{{ animation_delay }}"
            {%- assign animation_delay = animation_delay | plus: 150 -%}
          {% endif %}>
          <label for="{{ form_id }}-Name" class="field-label">{{ 'contact.form.name' | t }}</label>
          <input type="text" id="{{ form_id }}-Name" class="input--full" name="contact[{{ name_attr }}]" autocapitalize="words" value="{% if form[name_attr] %}{{ form[name_attr] }}{% elsif customer %}{{ customer.name }}{% endif %}" required>
        </div>
      {%- endunless -%}

      {%- unless types contains 'email' -%}
        <div class="form__item"
          {% if animations_enabled %}
            data-aos="fade-up"
            data-aos-anchor="{{ animation_anchor }}"
            data-aos-delay="{{ animation_delay }}"
            {%- assign animation_delay = animation_delay | plus: 150 -%}
          {% endif %}>
          <label for="{{ form_id }}-Email" class="field-label">{{ 'contact.form.email' | t }}</label>
          <input type="email" id="{{ form_id }}-Email" class="input--full" name="contact[email]" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" required>
        </div>
      {%- endunless -%}

      {%- unless types contains 'body' -%}
        <div class="form__item"
          {% if animations_enabled %}
            data-aos="fade-up"
            data-aos-anchor="{{ animation_anchor }}"
            data-aos-delay="{{ animation_delay }}"
            {%- assign animation_delay = animation_delay | plus: 150 -%}
          {% endif %}>
          <label for="{{ form_id }}-Message" class="field-label">{{ 'contact.form.message' | t }}</label>
          <textarea rows="10" id="{{ form_id }}-Message" class="input--full" name="contact[{{ 'contact.form.message' | t | handle }}]" required>{% if form.body %}{{ form.body }}{% endif %}</textarea>
        </div>
      {%- endunless -%}

      <div class="form__item form__item--submit"
        {% if animations_enabled %}
          data-aos="fade-up"
          data-aos-anchor="{{ animation_anchor }}"
          data-aos-delay="{{ animation_delay }}"
          {%- assign animation_delay = animation_delay | plus: 150 -%}
        {% endif %}>
        <button type="submit" class="btn {{ button_style }} {{ button_size }} {{ button_color }}">Submit</button>
      </div>
    {%- endform -%}
  </div>
</section>

