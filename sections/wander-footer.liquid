{%- style -%}

.wander-placeholder-footer {
    padding: 167px 50px;
    text-align: center;
    padding-bottom: 25px;
}

.wander-placeholder-footer-content {
    max-width: 836px;
    font-size: 33px;
    margin: 0 auto;
    line-height: 36px;
    margin-bottom: 52px;
    letter-spacing: 0;
}

.wander-placeholder-footer .field__label {
    letter-spacing: 3px;
    text-transform: uppercase;
    font-size: 10px;
    margin-top: 11px;
}

.field__input:focus ~ .field__label, .field__input:not(:placeholder-shown) ~ .field__label, .field__input:-webkit-autofill ~ .field__label, .customer .field input:focus ~ label, .customer .field input:not(:placeholder-shown) ~ label, .customer .field input:-webkit-autofill ~ label {
    font-size: 1rem;
    top: 0px;
    left: calc(var(--inputs-border-width) + 2rem);
    letter-spacing: 3px;
}

.wander-placeholder-footer .field {
    max-width: 425px;
    margin: 0 auto;   
}

.wander-placeholder-footer input {
    border: 1px solid #020202;
    letter-spacing: 3px;
    height: 56px;
    margin: 0 auto;
}

.wander-placeholder-footer-submit-button {
    background-color: #020202;
    color: #f8f8f8;
    border: 0;
    padding: 17px 56px;
    letter-spacing: 5px;
    margin-top: 36px;
    cursor: pointer;
}

.wander-placeholder-footer-submit-button:hover {
    opacity: .5;
}

.wander-social-links-header {
    margin-top: 91px;
    font-size: 30px;
    line-height: 30px;
    margin-bottom: 0;
    letter-spacing: 0;
}

.wander-social-links-instagram {
    margin-top: 15px;
    
}

.wander-social-links-instagram:hover {
    opacity: .5;
}

.wander-copyright {
    font-size: 9px;
    font-family: 'Arial';
    margin-top: 70px;
}

.subcontent {
    font-size: 16px;
    line-height: 23px;
    margin-bottom: 23px;
}

{%- endstyle -%}

<div class="wander-placeholder-footer is-background-beige">
    <div class="wander-placeholder-footer-content" {% if section.settings.subcontent != '' %}style="margin-bottom: 15px;"{% endif %}>{{ section.settings.content | raw }}</div>
    {% if section.settings.subcontent != '' %}
        <div class="subcontent serif-italic">
            {{ section.settings.subcontent | raw }}
        </div>
    {% endif %}
    {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter-form__field-wrapper">
            <div class="field">
                <input
                    id="NewsletterForm--{{ section.id }}"
                    type="email"
                    name="contact[email]"
                    class="field__input serif"
                    value="{{ form.email }}"
                    aria-required="true"
                    autocorrect="off"
                    autocapitalize="off"
                    autocomplete="email"
                    {% if form.errors %}
                    autofocus
                    aria-invalid="true"
                    aria-describedby="ContactFooter-error"
                    {% elsif form.posted_successfully? %}
                    aria-describedby="ContactFooter-success"
                    {% endif %}
                    placeholder="EMAIL"
                    required
                >
                <label class="field__label serif" for="NewsletterForm--{{ section.id }}">
                    EMAIL
                </label>
            </div>
            <button type="submit" id="Subscribe" class="wander-placeholder-footer-submit-button serif" aria-label="{{ 'newsletter.submit' | t }}">
                <strong>SIGN UP</strong>
            </button>
            {%- if form.errors -%}
                <small class="newsletter-form__message form__message" id="ContactFooter-error">
                    <span class="svg-wrapper">
                    {{- 'icon-error.svg' | inline_asset_content -}}
                    </span>
                    {{- form.errors.translated_fields.email | capitalize }}
                    {{ form.errors.messages.email -}}
                </small>
            {%- endif -%}
        </div>
            {%- if form.posted_successfully? -%}
                <h3
                class="newsletter-form__message newsletter-form__message--success form__message"
                id="ContactFooter-success"
                tabindex="-1"
                autofocus
                >
                    <span class="svg-wrapper">
                        {{- 'icon-success.svg' | inline_asset_content -}}
                    </span>
                    {{- 'newsletter.success' | t }}
                </h3>
            {%- endif -%}
        {%- endform -%}
        
        {% if section.settings.instagram-icon %}
            <div class="wander-social-links">
                <div class="wander-social-links-header">
                    {{ section.settings.follow-us-content }}
                </div>
                <div class="wander-social-links-instagram">
                    <a href="{{ settings.social_instagram_link }}" target="Instagram">{{ section.settings.instagram-icon | image_url: width: 30 | image_tag }}</a>
                </div>
            </div>            
        {% endif %}

        {% if section.settings.copyright-content %}
            <div class="wander-copyright">
                {{ section.settings.copyright-content }}
            </div>
        {% endif %}

        
    </div>
</div>

{% schema %}
{
  "name": "WANDER Placeholder Footer",
  "settings": [
    {
      "type": "html",
      "id": "content",
      "label": "Content"
    },
    {
        "type": "html",
        "id": "subcontent",
        "label": "Sub-Content"
    },
    {
        "type": "richtext",
        "id": "follow-us-content",
        "label": "Follow Us Content"
    },
    {
      "type": "image_picker",
      "id": "instagram-icon",
      "label": "Select the Instagram Icon"
    },
    {
        "type": "richtext",
        "id": "copyright-content",
        "label": "Copyright Message"
    }
  ],
  "presets": [
    {
      "name": "WANDER Placeholder Footer",
      "settings": {
       
      } 
    }
  ]
}
{% endschema %}
