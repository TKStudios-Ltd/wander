    {
      "type": "text",
      "id": "success_text",
      "label": "Success message",
      "default": "Thanks—your application has been submitted."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Submit"
    },
    {
      "type": "checkbox",
      "id": "show_file_inputs",
      "label": "Show file inputs (visual only)",
      "default": true
    }
  ],
  "presets": [
    { "name": "Trade Program Form" }
  ]
}
{% endschema %}
